@model IEnumerable<BetaLabUnidad3.Models.Pedidos>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Pedidos en caja</h2>

<div class="form-group"><!--Boton para regresar a la lista-->
    <div class="col-md-offset-1 col-md-1">
        <input type="submit" value="Regresar a lista" id="Submit" class="btn btn-default" onclick="location.href='@Url.Action("Index", "Med")'" />
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ClientName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.total)
        </td>
    </tr>
}

</table>
